{
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/bretten/cake_decorations.git"
        }
    ],
    "require": {
        "php": ">=5.2.8",
        "ext-mcrypt": "*",
        "cakephp/cakephp": "2.7.5",
        "bretten/cake_decorations": "2.5.0.1"
    },
    "config": {
        "vendor-dir": "app/Vendor"
    },
    "bin": [
        "lib/Cake/Console/cake"
    ],
    "extra": {
        "installer-paths": {
            "plugins/{$name}": [
                "bretten/cake_decorations"
            ]
        }
    }
}
